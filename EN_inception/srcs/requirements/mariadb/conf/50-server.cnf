# ============================================================================
#                   MARIADB CONFIGURATION - INCEPTION
# ============================================================================

[mysqld]

# System user running the service
user                    = mysql

# Process control files
pid-file                = /run/mysqld/mysqld.pid
socket                  = /run/mysqld/mysqld.sock

# Listening port (default MySQL/MariaDB)
port                    = 3306

# System directories
basedir                 = /usr
datadir                 = /var/lib/mysql
tmpdir                  = /tmp
lc-messages-dir         = /usr/share/mysql

# IMPORTANT: Allow connections from any IP (required for Docker)
bind-address            = 0.0.0.0

# Query cache (improves performance)
query_cache_size        = 16M

# Logs and maintenance
log_error               = /var/log/mysql/error.log
expire_logs_days        = 10

# UTF-8 encoding (full character support)
character-set-server    = utf8mb4
collation-server        = utf8mb4_general_ci

